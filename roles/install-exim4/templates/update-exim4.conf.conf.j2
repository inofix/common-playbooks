dc_relay_domains=''
dc_minimaldns='false'
dc_relay_nets=''
dc_smarthost='{{ exim4__smart_host }}'
CFILEMODE='644'
dc_use_split_config='true'
dc_hide_mailname='{{ exim4__hide_mail_name }}'
dc_mailname_in_oh='true'
dc_localdelivery='mail_spool'

